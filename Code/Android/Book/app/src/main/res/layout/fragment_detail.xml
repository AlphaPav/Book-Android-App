<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetailFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="220dp">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="售价"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:id="@+id/addbook_sellprice"
                        android:layout_height="wrap_content"
                        android:layout_width="350dp"
                        android:textSize="16sp"
                        />

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="类别"
                        android:textSize="16sp"
                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/addbook_spinner_booktype"
                        />
                </TableRow>


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="描述"
                    android:textSize="16sp"
                    />


                <EditText
                    android:id="@+id/addbook_description"
                    android:layout_marginTop="5dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bg"

                    android:gravity="top"
                    android:maxLines="5"
                    android:minHeight="80dp"

                    android:textSize="14sp" />

            </TableLayout>


            <TableLayout
                android:id="@+id/addbook_tablelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="书名"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:id="@+id/addbook_bookname"
                        android:layout_height="wrap_content"
                        android:layout_width="350dp"
                        android:textSize="16sp"
                        />

                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="作者"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:id="@+id/addbook_author"
                        android:layout_height="wrap_content"
                        android:layout_width="350dp"
                        android:textSize="16sp"
                        android:selectAllOnFocus="true"
                        />

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="出版社"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:id="@+id/addbook_press"
                        android:layout_height="wrap_content"
                        android:layout_width="350dp"
                        android:textSize="16sp"
                        android:selectAllOnFocus="true"
                        />

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="ISBN"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:id="@+id/addbook_ISBN"
                        android:layout_height="wrap_content"
                        android:layout_width="350dp"
                        android:textSize="16sp"
                        android:selectAllOnFocus="true"
                        />

                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="原价"
                        android:textSize="16sp"
                        />
                    <EditText
                        android:id="@+id/addbook_originalprice"
                        android:layout_height="wrap_content"
                        android:layout_width="350dp"
                        android:textSize="16sp"
                        android:selectAllOnFocus="true"
                        />

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="摘要"
                        android:textSize="16sp"
                        />
                </TableRow>
                <EditText
                    android:id="@+id/addbook_abstract"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_bg"
                    android:gravity="top"
                    android:minLines="5"

                    android:textSize="14sp" />

                <TableRow>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="目录"
                        android:textSize="16sp"
                        />
                </TableRow>
                <EditText
                    android:id="@+id/addbook_catalog"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_bg"
                    android:gravity="top"
                    android:minLines="5"
                    android:textSize="14sp" />



            </TableLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>